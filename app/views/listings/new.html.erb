<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>

<%= form_with url: listings_path() do |form| %>
  <%= form.label :monthly_rate %>
  <%= form.number_field :monthly_rate, required: true, autofocus: true, autocomplete: "monthly_rate", placeholder: "Enter the monthly rate", step: ".01", min: 0, max: 10000 %><br>
  <%= form.label :security_deposit %>
  <%= form.number_field :security_deposit, required: true, autocomplete: "security_deposit", placeholder: "Enter the security deposit amount", step: ".01", min: 0, max: 10000 %><br>
  <%= form.label :open_to_negotiation %>
  <%= form.checkbox :open_to_negotiation, autocomplete: "open_to_negotiation" %><br>
  <%= form.label :prorating_available %>
  <%= form.checkbox :prorating_available, autocomplete: "prorating_available" %><br>
  <%= form.label :gender %>
  <%= form.text_field :gender, required: true, autocomplete: "gender", placeholder: "Describe what gender this room is for" %><br>
  <%= form.label :other_details %>
  <%= form.textarea :other_details, required: true, autocomplete: "other_details", placeholder: "Describe what gender this room is for" %><br>
  <%= form.label :start_date %>
  <%= form.date_field :start_date, required: true, autocomplete: "start_date" %><br>
  <%= form.label :end_date %>
  <%= form.date_field :end_date, required: true, autocomplete: "end_date" %><br>
  <%= form.label :new_listing_residence_id %>
  <%= collection_select("", :residence_id, @residences, :id, :name) %>
  <%= form.label :new_listing_roomtype_id %>
  <%= collection_select("", :roomtype_id, @roomtypes, :id, :name) %>
  <%= form.submit "Post new listing" %>
<% end %>